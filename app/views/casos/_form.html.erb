<%= form_with(model: caso) do |form| %>


  <% if caso.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(caso.errors.count, "errore") %> no permitieron guardar
      este caso.</h2>
      <ul>
        <% caso.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row mb-3">
    <div class="offset-md-3 col-md-4">
      <%= form.collection_select :cliente_id, Cliente.all, :id, :razon_social %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="offset-md-3 col-md-4">
      <%= form.text_area :texto_caso, :class => "form-control", :style => "height: 400px" %> 
    </div>
  </div>


  <div class="offset-md-6 col-md-2">
    <%= form.submit%>
  </div>
<% end %>
