<div>
  <table class="table table-hover align-middle">
    <thead style="position:sticky; top: 0; position: -webkit-sticky;", class="table-primary" >
      <tr>
        <th class="col-1"></th>
        <th class="col-1">Fecha</th>
        <th class="col-5">Obligaciones Presentadas</th>
        <th class="col-2"></th>
      </tr>
    </thead>
    <tbody>
      <% obligaciones.each do |obligacion| %>
        <tr> 
          <td></td>
          <td><%= obligacion.fecha.year.to_s + " " + I18n.t(obligacion.fecha.strftime('%B'))=%></td>
          <td>
            <% obligacion.presentadas.each_with_index do |ob,idx| %>
              <%= ob if not ob.empty? %>
              <%= ", " if idx != obligacion.presentadas.size()-1 && !ob.empty? %>
            <% end %>
          </td>
          <td><%= link_to "Editar", edit_cliente_obligacion_path(obligacion.cliente,obligacion), {:class => 'btn btn-primary'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
